{
  "name": "@functionx_io/contracts",
  "description": "Smart Contract library for Solidity",
  "version": "0.1.0",
  "files": [
    "/contracts/**/*.sol",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "compile": "npx hardhat compile",
    "clean": "rm -rf artifacts cache build dist typechain && npx hardhat clean",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\""
  },
  "keywords": [
    "solidity",
    "ethereum",
    "crosschain",
    "staking"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FunctionX/fx-core.git"
  },
  "bugs": {
    "url": "https://github.com/FunctionX/fx-core/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "4.8.3"
  },
  "devDependencies": {
    "hardhat": "^2.14.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "^0.0.5",
    "prettier-plugin-solidity": "^1.0.0-dev.23",
    "prettier": "^2.7.1"
  }
}
